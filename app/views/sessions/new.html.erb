<script>changetofamily()</script>
<div class="jumbotron">
  <h1>Welcome to Photo Friends!</h1>
  <div class="col-md-6 col-md-offset-3">
    <h3>A private family photo sharing and social media website.</h3>
    <h3>
      <%= link_to "<button class='btn btn-primary'>Sign up</button>".html_safe, sign_up_path %> 
      or if you have an account:
    </h3>
  </div>
  <div class="gray-box col-md-4 col-md-offset-4">
    <% flash.each do |key, value| %>
      <div class="alert alert-danger"><%= value %></div>
    <% end %>
    <%= form_for(:session, url: sessions_path, :html => { class: "form-signin" }) do |f| %>
        <%= f.text_field :credential_name, class: "form-control", placeholder: "Email or Username", class: "form-control" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Password", class: "form-control" %>
      <%= f.submit 'Submit', :class => "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>


  
 

