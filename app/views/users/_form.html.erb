<div class="jumbotron">
  <% if request.path == edit_user_path(current_user) %>
    <h2>Edit your profile</h2>
  <% else %>
    <h2>Create an account</h2>
  <% end %>
  <h4 class="text-danger">All fields are required</h4>
  <div class="gray-box col-md-6 col-md-offset-3">
    <%= form_for(@user, html: { class: "form-horizontal", role: "form", multipart: true }) do |f| %>
      <div id="error_explanation">
        <% if @user.errors.any? %>
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        <% end %>
      </div>
      <div class="field form-group">
        <%= f.label :name, class: "text-primary control-label field-label col-lg-2" %>
        <div class="col-lg-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :email, class: "text-primary field-label control-label col-lg-2" %>
        <div class="col-lg-10">
          <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :username, class: "text-primary field-label control-label col-lg-2" %>
        <div class="col-lg-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label :password, class: "text-primary field-label control-label col-lg-2" %>
        <div class="col-lg-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      <div class="field form-group">
        <%= f.label "Confirm", class: "text-primary field-label control-label col-lg-2" %>
        <div class="col-lg-10">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
        </div>
      </div>
      
      <div class="field form-group">
        <%= f.label :avatar, class: "text-primary field-label control-label col-lg-2" %>
        <% if request.path == edit_user_path(current_user) %>
            <div class="fileupload fileupload-exists" data-provides="fileupload">
        <% else %>
            <div class="fileupload fileupload-new" data-provides="fileupload">
        <% end %>
          <div class="col-lg-10">
            <div class="fileupload-preview thumbnail avtr">
              <% if @user.avatar.blank? %>
                <%= image_tag("/assets/default_avatar.jpg") %>
              <% else %>
                <%= image_tag(@user.avatar_url) %>
              <% end %>
            </div>
            <span class="btn btn-file btn-primary"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><%= f.file_field :avatar %></span>
            <a href="#" class="btn fileupload-exists btn-danger" data-dismiss="fileupload">Remove</a>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-primary pull-right" %>
      </div>
    <% end %>
  </div>
</div>

</div>
