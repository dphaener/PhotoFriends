<script>
    <% if !@photos.blank? %>
        <% randomback = Photo.where(gallery_id: @gallery.sample.id).take %>
        randombackground('<%= randomback.image %>');
    <% else %>
        changetofriends();
    <% end %>
</script>

<p id="notice"><%= notice %></p>
<div class="jumbotron">
  <h1><%= @group.name %></h1><span class="glyphicon glyphicon-photo"></span>
  <% if @gallery.blank? %>
    <h2>You have no galleries!</h2>
    <div class="col-md-3 col-md-offset-5">  
      <%= link_to '<button class="btn pull-left btn-primary">Create</button>'.html_safe, new_user_group_gallery_path(@user, @group) %>
      <p style="text-indent: 10px;">a new one!</p>
    </div>
  <% else %>
    <div class="container">
        <% @gallery.each_slice(3) do |slice| %>
          <div class="row">
              <% slice.each do |g| %>
                <div class="col-md-4 gallery-cont">
                 <div class="gallery">
                    <h2><%= g.name %></h2>
                    <% randomphoto = Photo.where(gallery_id: g.id).take %>
                    <% randomphoto = Photo.new if randomphoto.blank? %>
                    <%= image_tag(randomphoto.image_url(:preview)) %>
                    <div class="btn-group gallery-btns">
                        <%= link_to "<i class='glyphicon glyphicon-edit'></i>".html_safe, edit_user_group_gallery_path(@user.id, @group.id, g.id), class: "btn btn-default btn-gall-edit col-md-3" %>
                        <%= link_to "<i class='glyphicon glyphicon-th'></i>".html_safe, user_group_gallery_path(@user, @group, g.id), class: "btn btn-default btn-gall-show col-md-6" %>
                        <%= link_to "<i class='glyphicon glyphicon-picture'></i>".html_safe, new_user_group_gallery_photo_path(@user.id, @group.id, g.id), class: "btn btn-default btn-photo-add col-md-3" %>
                    </div>
                  </div>
                </div>
              <% end %>
          </div>
        <% end %>
    </div>
  <% end %>
  <div class="btns">
    <%= link_to '<button class="btn pull-right btn-primary">Group Settings</button>'.html_safe, edit_user_group_path(current_user.id, @group) %>
    <%= link_to '<button class="btn pull-right btn-primary btn-spc">New Gallery</button>'.html_safe, new_user_group_gallery_path(@user, @group) %>
  </div>
  </div>

